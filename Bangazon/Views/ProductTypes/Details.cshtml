@model Bangazon.Models.GroupedProductType;

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>ProductType</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductType.Label)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductType.Label)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductType.Products.FirstOrDefault().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductType.Products.FirstOrDefault().Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductType.Products.FirstOrDefault().Price)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductType.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Price)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductType.ProductTypeId">Edit</a> |
    <a asp-controller="Products" asp-action="Types">Back to List</a>
</div>
